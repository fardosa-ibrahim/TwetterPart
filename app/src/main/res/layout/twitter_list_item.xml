<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTwitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="92dp"
            app:layout_constraintBottom_toTopOf="@+id/imgChats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="35dp"
            android:text="Fardosa"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/tvHundle"
            app:layout_constraintStart_toEndOf="@+id/imgProfile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHundle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="56dp"
            android:text="gmail@fardosa"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgChats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="69dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgRetweet"
            app:layout_constraintEnd_toStartOf="@+id/imgRetweet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgRetweet"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_baseline_chat_bubble_outline_24" />

        <ImageView
            android:id="@+id/imgRetweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="59dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgComment"
            app:layout_constraintEnd_toStartOf="@+id/imgComment"
            app:layout_constraintStart_toEndOf="@+id/imgChats"
            app:layout_constraintTop_toTopOf="@+id/imgComment"
            app:srcCompat="@drawable/ic_baseline_repeat_24" />

        <ImageView
            android:id="@+id/imgComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="49dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgShare"
            app:layout_constraintEnd_toStartOf="@+id/imgShare"
            app:layout_constraintStart_toEndOf="@+id/imgRetweet"
            app:layout_constraintTop_toTopOf="@+id/imgShare"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

        <ImageView
            android:id="@+id/imgShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgComment"
            app:layout_constraintTop_toBottomOf="@+id/tvTweet"
            app:srcCompat="@drawable/ic_baseline_share_24" />

        <TextView
            android:id="@+id/tvTweet"
            android:layout_width="219dp"
            android:layout_height="34dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="19dp"
            android:text="Tweet"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imgProfile"
            app:layout_constraintTop_toBottomOf="@+id/tvHundle" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="36dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:text="5H"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/tvHundle"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>